<h1>Listing nodes</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Git repo</th>
    <th>Git repo path</th>
    <th>Published on</th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%=h node.id %></td>
    <td><%=h node.name %></td>
    <td><%=h node.git_repo_id %></td>
    <td><%=h node.git_repo_path %></td>
    <td><%=h node.publish_date %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New node', new_node_path %>
