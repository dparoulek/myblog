<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => "text" %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => "text" %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
