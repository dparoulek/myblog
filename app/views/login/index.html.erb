<% if logged_in? %>

<p> You are currently logged in as <%= current_user.email %> </p>

<% else %>

<h3>Login</h3>
<% form_tag('/login')  do -%>
<p>
<%= label_tag "Email" %>
<%= text_field_tag 'email' %>
</p>
<p>
<%= label_tag "Password" %>
<%= password_field_tag 'password' %>
</p>
<p>
<%= submit_tag "Login" %>
</p>
<% end -%>

<% end %>

