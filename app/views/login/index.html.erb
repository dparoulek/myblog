<% if flash[:notice] %>
<div class="notice"><%= flash[:notice] %></div>
<% end %>

<h3>Login</h3>
<% form_tag('/login')  do -%>
<p>
<%= label_tag "Email" %>
<%= text_field_tag 'Email' %>
</p>
<p>
<%= label_tag "Password" %>
<%= password_field_tag 'Password' %>
</p>
<p>
<%= submit_tag "Login" %>
</p>
<% end -%>

