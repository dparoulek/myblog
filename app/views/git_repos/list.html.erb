<p><%= @git_repo_name %></p>
<ul>
<% @dirs.each do |entry| %>
<li class="icon directory"><a href="<%= "/files/#{@git_repo_name}/#{@path=="/" ? "" : @path+"/"}#{entry.name}" %>" ><%= entry.name %></a></li>
<% end %>
<% @files.each do |entry| %>
<li class="icon file"><a href="<%= "/files/#{@git_repo_name}/#{@path=="/" ? "" : @path+"/"}#{entry.name}" %>" ><%= entry.name %></a></li>
<% end %>
</ul>
