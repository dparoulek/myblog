<%= link_to "edit", :action => "edit_file", :git_repo_id => @node.git_repo_id, :git_repo_path => @node.git_repo_path, :name => @node.name %>
<%= render(:partial => "nodes/node", :object => @node) %>
<% if @node.id %>
<td><%= link_to 'Unpublish', @node, :confirm => 'This will also delete any comments lose any associations to attachments. Are you sure?', :method => :delete %></td>
<% else %>
<% form_for(@node) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :git_repo_path %><br />
    <%= f.text_field :git_repo_path %>
  </p>
  <p>
    <%= f.hidden_field :git_repo_id %>
  </p>
  <p>
    <%= f.submit 'Create and Publish' %>
  </p>
<% end %>
<% end %>
