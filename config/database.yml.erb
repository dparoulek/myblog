development:
    adapter: postgresql
    database: myblog-dev
    username: myblog
    password: myblog
    host: localhost
    port: 5432
    timeout: 5000

test: &test
    adapter: postgresql
    database: myblog-test
    username: myblog
    password: myblog
    host: localhost
    port: 5432
    timeout: 5000

production:
    adapter: postgresql
    database: #{Capistrano::CLI.ui.ask("Enter prod database database: ")}
    username: #{Capistrano::CLI.ui.ask("Enter prod database username: ")}
    password: #{Capistrano::CLI.ui.ask("Enter prod database password: ")}
    host: #{Capistrano::CLI.ui.ask("Enter prod datbase host: ")}
    port: #{Capistrano::CLI.ui.ask("Enter prod datbase port: ")}
    timeout: 5000

cucumber:
  <<: *test